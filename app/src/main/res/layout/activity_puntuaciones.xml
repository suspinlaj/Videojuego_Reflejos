<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Puntuaciones">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- GuideLine para que las nubes no salgan en toda la pantalla-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaNubes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.68" />

    <FrameLayout
        android:id="@+id/animacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guiaNubes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- guia ARRIBA -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17" />

    <!-- guia ABAJO -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.64" />

    <!-- guia IZQUIERDA -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <!-- guia DERECHA -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <TextView
        android:id="@+id/tvTituloTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top 10"
        android:textColor="@color/rojoOscuro"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/pixeltitulo"
        app:layout_constraintBottom_toTopOf="@id/guiaArriba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/imagenCuadrado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/cuadrado"
        app:layout_constraintBottom_toBottomOf="@id/guiaAbajo"
        app:layout_constraintEnd_toEndOf="@id/guiaDerecha"
        app:layout_constraintStart_toStartOf="@id/guiaIzquierda"
        app:layout_constraintTop_toTopOf="@id/guiaArriba" />

    <ListView
        android:id="@+id/listViewPuntuaciones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:dividerHeight="1.8dp"
        android:scrollbarThumbVertical="@drawable/barra_scroll"
        android:fadeScrollbars="false"
        android:divider="@color/marron"
        app:layout_constraintBottom_toBottomOf="@id/imagenCuadrado"
        app:layout_constraintEnd_toEndOf="@id/imagenCuadrado"
        app:layout_constraintStart_toStartOf="@id/imagenCuadrado"
        app:layout_constraintTop_toTopOf="@id/imagenCuadrado" />

    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="onClickAtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guiaAbajo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/btnvolver" />

</androidx.constraintlayout.widget.ConstraintLayout>